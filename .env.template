# Environment Variables Template
# SECURITY WARNING: NEVER commit actual keys to version control!
#
# Instructions:
# 1. Copy this file to .env.local for local development
# 2. Fill in with TEST keys only for local development
# 3. Add PRODUCTION keys only in Vercel Dashboard

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from https://dashboard.stripe.com/apikeys
# Use TEST keys for local development
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Stripe Connect Account ID
JAYLA_STRIPE_ACCOUNT_ID=YOUR_STRIPE_CONNECT_ACCOUNT_ID_HERE

# Platform fee percentage (10% for PRSM Tech)
PLATFORM_FEE_PERCENTAGE=10

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_NEW_SECRET_HERE

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_NEW_SECRET_HERE

# ============================================
# SUPABASE CONFIGURATION (Optional)
# ============================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:8000

# ============================================
# OPTIONAL SERVICES
# ============================================
# SendGrid for email notifications
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=orders@jaylataylor.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma separated)
ALLOWED_ORIGINS=https://jaylataylor.com,https://www.jaylataylor.com

# Logging
LOG_LEVEL=error
LOG_FILE_PATH=./logs/